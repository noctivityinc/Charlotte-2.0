#supporters
  #index
    - title "Supporters"

    %table.fancy
      %tr
        %th Name
        %th Company
        %th Created On
        %th(colspan="3")
      - for supporter in @supporters
        %tr
          %td= mail_to supporter.email, supporter.name
          %td= link_to supporter.company, supporter.website, :target => "_blank" 
          %td= supporter.created_at
          %td= link_to 'Show', [:admin, supporter]
          %td= link_to 'Edit', edit_admin_supporter_path(supporter)
          %td= link_to 'Destroy', [:admin, supporter], :confirm => 'Are you sure?', :method => :delete

    %p= link_to "+ New Supporter", new_admin_supporter_path
